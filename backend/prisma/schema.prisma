// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Spec {
  id           String      @id @default(uuid())
  goal         String
  users        String
  constraints  String?
  templateType String
  createdAt    DateTime    @default(now())
  userStories  UserStory[]
  risks        Risk[]

  @@map("specs")
}

model UserStory {
  id          String   @id @default(uuid())
  specId      String
  spec        Spec     @relation(fields: [specId], references: [id], onDelete: Cascade)
  title       String
  description String
  position    Int
  tasks       Task[]
  createdAt   DateTime @default(now())

  @@map("user_stories")
}

model Task {
  id          String    @id @default(uuid())
  storyId     String
  story       UserStory @relation(fields: [storyId], references: [id], onDelete: Cascade)
  title       String
  description String
  groupName   String
  position    Int
  createdAt   DateTime  @default(now())

  @@map("tasks")
}

model Risk {
  id          String   @id @default(uuid())
  specId      String
  spec        Spec     @relation(fields: [specId], references: [id], onDelete: Cascade)
  description String
  createdAt   DateTime @default(now())

  @@map("risks")
}
